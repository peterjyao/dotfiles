syntax on
colorscheme Papercolor
set background=dark
set lines=30 columns=100
set guioptions-=m
set guioptions-=T
set guioptions-=l
set guioptions-=r
set visualbell
set vb t_vb=
set laststatus=2
set backspace=2

let g:slime_target = "vimterminal"

let g:diminactive_use_colorcolumn = 0
let g:diminactive_use_syntax = 1

language en_US

